mixin competence(title, src, alt)
    article.competence__block
        img.competence__img(src=src alt=alt)
        .competence__about
            h3.competence__title=title
            p.competence__description.description Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
            a.competence__lean-more(href='#')
                span Learn more
                img.arrow(src="src/img/arrow.svg" alt="Arrow")   

mixin project(title, description, src)
    article.project__block
        a.project__block__overlay(href=src)
        .project__block__about 
            p.project__block__title=title
            p.project__block__description=description

